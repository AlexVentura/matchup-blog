<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url(<%= @article.cover.url %>)">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="post-heading">
                    <h1><%= @article.title %></h1>
                    <h2 class="subheading">Problems look mighty small from 150 miles up</h2>
                    <span class="meta">Posted by <a href="#">Start Bootstrap</a> on August 24, 2014</span>
                    <% unless @article.user.nil? %>
                        Escrito por: <%= @article.user.email %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Post Content -->
<article>
    <div class="container">
        <div class="row">
            <div class="col-xs-6">
                <div class="text-left text-red">
                    <span><%= @article.visits_count %> visita(s) - <%= @article.comments.count %> comentario(s)</span>
                </div>
            </div>
            <div class="col-xs-6">
                <div class="text-right">
                    <!-- AquÃ­ se deben mostrar las categorias -->
                    <span class="btn glyphicon glyphicon-tags" aria-hidden="true"></span>
                    <% @article.categories.each do |category| %>
                        <%= link_to category.name, category, class: 'btn btn-default', style: "color: #{category.color}" %>
                    <% end %>
                </div>
            </div>
        </div>
        <hr>

        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-xs-10 col-xs-offset-1 postbody-text">
                <%= Sanitize.fragment(@article.body, Sanitize::Config::RELAXED).html_safe %>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="text-left text-center">
                    &larr;
                    <%= link_to 'Atras', articles_path, class: 'btn btn-primary' %>
                </div>
            </div>
        </div>
        <hr>

        <div class="row">
            <%= render 'articles/comments' %>
        </div>
    </div>
</article>

<hr>